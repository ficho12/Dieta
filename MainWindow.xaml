<Window x:Class="Dieta.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dieta"
        mc:Ignorable="d"
        Title="Dieta" Height="450" Width="800">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="30" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Grid.Column="0" HorizontalAlignment="Stretch">
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" VerticalAlignment="Top" />
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>

            <MenuItem Header="Tablas">
                <MenuItem Header="Ver Tablas" Click="VerTablas_Click"/>
                <MenuItem Header="Guardar Tablas" Click="GuardarTablas_Click"/>
                <MenuItem Header="Guardar Tablas Como..." Click="GuardarTablasComo_Click"/>
                <MenuItem Header="Cargar Tablas" Click="CargarTablas_Click"/>
                <MenuItem Header="Eliminar Tablas" Click="EliminarTablas_Click"/>
            </MenuItem>
        </Menu>

        <Button Content="Ver Todo" Grid.Row="1" Margin="100,2" Click="VerTodo_Click"/>
        <Button Name="grafica" Content="Gráfica" Grid.Row="2" Margin="50,10,50,0" Click="Button_Click" Height="349" VerticalAlignment="Top"/>
        
        <ListView Name="listaFecha" Grid.Row="2" Grid.ColumnSpan="2" SelectionChanged="listaFecha_SelectionChanged_1"
                  ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="True" Margin="10,10,10,20">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="FECHA" DisplayMemberBinding="{Binding fecha}"></GridViewColumn>
                    <GridViewColumn Header="TOTAL CALORÍAS" DisplayMemberBinding="{Binding totalCalorias}"></GridViewColumn>
                </GridView>
            </ListView.View>

            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Eliminar" Click="MenuItem_Click"/>
                </ContextMenu>
            </ListView.ContextMenu>

        </ListView>
        
    </Grid>

</Window>
